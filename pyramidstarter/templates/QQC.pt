                        <div class="col-lg-6 col-lg-offset-3">
                            <div class="btn-group" role="group"  aria-label="...">
                                <button type="button" class="btn btn-warning" id="QQC_clear"><i class="fa fa-eraser" aria-hidden="true"></i> Clear
                                </button>

